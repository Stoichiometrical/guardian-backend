<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#161622"
    android:padding="16dp">

    <!-- GuardianAI logo -->
    <ImageView
        android:id="@+id/logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:src="@drawable/logo" />

    <!-- Sign up title -->
    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/logo"
        android:layout_marginTop="24dp"
        android:layout_centerHorizontal="true"
        android:text="Sign up"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        android:textStyle="bold" />

    <!-- Username field -->
    <EditText
        android:id="@+id/username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/title"
        android:layout_marginTop="16dp"
        android:hint="Your unique username"
        android:textColorHint="#8C8C8C"
        android:background="@drawable/rounded_edittext"
        android:textColor="#FFFFFF"
        android:padding="12dp" />

    <!-- Email field -->
    <EditText
        android:id="@+id/email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/username"
        android:layout_marginTop="16dp"
        android:hint="Email"
        android:textColorHint="#8C8C8C"
        android:background="@drawable/rounded_edittext"
        android:textColor="#FFFFFF"
        android:padding="12dp"
        android:text="marthargondo@gmail.com" />

    <!-- Phone number field -->
    <EditText
        android:id="@+id/phone_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/email"
        android:layout_marginTop="16dp"
        android:hint="Phone Number"
        android:textColorHint="#8C8C8C"
        android:background="@drawable/rounded_edittext"
        android:textColor="#FFFFFF"
        android:padding="12dp" />

    <!-- Emergency contact field -->
    <EditText
        android:id="@+id/emergency_contact"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/phone_number"
        android:layout_marginTop="16dp"
        android:hint="Emergency Contact"
        android:textColorHint="#8C8C8C"
        android:background="@drawable/rounded_edittext"
        android:textColor="#FFFFFF"
        android:padding="12dp" />

    <!-- Password field -->
    <EditText
        android:id="@+id/password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/emergency_contact"
        android:layout_marginTop="16dp"
        android:hint="Password"
        android:textColorHint="#8C8C8C"
        android:background="@drawable/rounded_edittext"
        android:textColor="#FFFFFF"
        android:padding="12dp"
        android:inputType="textPassword"
        />

    <!-- Sign up button -->
    <Button
        android:id="@+id/btn_sign_up"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/password"
        android:layout_marginTop="24dp"
        android:text="Sign Up"
        android:backgroundTint="#129CED"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        android:padding="12dp" />

    <!-- Already have an account? Login text -->
    <TextView
        android:id="@+id/already_have_account"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn_sign_up"
        android:layout_marginTop="12dp"
        android:text="Already have an account? Login"
        android:textColor="#FFFFFF"
        android:textSize="14sp"
        android:layout_centerHorizontal="true" />
</RelativeLayout>
